generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Class {
  name     String     @id
  Student  Student[]
  Teaching Teaching[]
}

model Grade {
  id          String   @id @default(cuid())
  value       Float
  timestamp   DateTime
  description String
  student     String
  subject     String
  Student     Student  @relation(fields: [student], references: [email])
  Subject     Subject  @relation(fields: [subject], references: [name])
}

model Student {
  email String  @id
  class String
  Class Class   @relation(fields: [class], references: [name])
  User  User    @relation(fields: [email], references: [email])
  Grade Grade[]
}

model Subject {
  name        String     @id
  description String
  Grade       Grade[]
  Teaching    Teaching[]
}

model Teacher {
  email    String     @id
  User     User       @relation(fields: [email], references: [email])
  Teaching Teaching[]
}

model Teaching {
  id      String  @id @default(cuid())
  teacher String
  class   String
  subject String
  Class   Class   @relation(fields: [class], references: [name])
  Subject Subject @relation(fields: [subject], references: [name])
  Teacher Teacher @relation(fields: [teacher], references: [email])
}

model User {
  type      usertype
  firstName String
  lastName  String
  email     String   @id
  password  String
  Student   Student?
  Teacher   Teacher?
}

enum usertype {
  admin
  student
  teacher
}
