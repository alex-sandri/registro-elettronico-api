generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Class {
  name     String     @id
  Student  Student[]
  Teaching Teaching[]
}

model Grade {
  value       Int
  timestamp   DateTime
  description String
  student     String
  Student     Student  @relation(fields: [student], references: [email])

  @@id([value, timestamp, description, student])
}

model Student {
  firstName String
  lastName  String
  email     String  @id
  password  String
  class     String
  Class     Class   @relation(fields: [class], references: [name])
  Grade     Grade[]
}

model Subject {
  name        String     @id
  description String
  Teaching    Teaching[]
}

model Teacher {
  firstName String
  lastName  String
  email     String     @id
  password  String
  Teaching  Teaching[]
}

model Teaching {
  teacher String
  class   String
  subject String
  Class   Class   @relation(fields: [class], references: [name])
  Subject Subject @relation(fields: [subject], references: [name])
  Teacher Teacher @relation(fields: [teacher], references: [email])

  @@id([class, teacher, subject])
}
